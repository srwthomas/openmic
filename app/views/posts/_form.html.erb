<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div>
  <div class="label">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="label">
    <%= form.label :instrument, style: "display: block" %>
    <div class="bandInfo">
      <p>If you want to perform with a band, please notify event administration</p>
    </div>
    <%= form.text_field :instrument %>
  </div>

  <div class="label">
    <%= form.label :genre, style: "display: block" %>
    <%= form.select :genre, Post::GENRES, class: "form-select" %>
  </div>

  <div class="formSubmit btn btn-lg btn-success">
    <%= form.submit %>
  </div>
</div>
<% end %>
